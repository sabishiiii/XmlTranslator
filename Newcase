@Test
public void testJsonToXmlConversion_NestedArrayInJson() {
    // JSON input with a nested array
    String jsonInput = "{\"name\":\"John\",\"age\":30,\"city\":\"New York\",\"hobbies\":[\"reading\",\"gaming\",\"cooking\"],\"friends\":[{\"name\":\"Alice\",\"age\":28,\"city\":\"London\"},{\"name\":\"Bob\",\"age\":32,\"city\":\"Paris\"}]}";

    // Expected XML output
    String expectedXml = "<root><name>John</name><age>30</age><city>New York</city><hobbies><hobby>reading</hobby><hobby>gaming</hobby><hobby>cooking</hobby></hobbies><friends><friend><name>Alice</name><age>28</age><city>London</city></friend><friend><name>Bob</name><age>32</age><city>Paris</city></friend></friends></root>";

    // Create an instance of the TranslatorServiceImpl
    TranslatorServiceImpl translatorService = new TranslatorServiceImpl();

    // Set the JSON input
    translatorService.setInputJson(jsonInput);

    // Perform the JSON to XML conversion
    translatorService.jsonToXml();

    // Read the generated XML from the Output directory
    String actualXml = readOutputFile("output.xml");

    // Assert the expected XML output
    Assertions.assertEquals(expectedXml, actualXml);
}
